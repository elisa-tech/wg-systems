+#!/bin/bash
+
+check_km_path() {
+local f=$1
+local delete
+local filename=$(basename $f)
+local keep
+local baseid=${filename%%.*}
+
+  if [ -n "${keepmods[$baseid]}" ]; then
+    keep=y
+  fi
+  if [ -n "$keep" ]; then
+    if [  ! -f "${SDIR}/$f" ]; then
+      echo "keeping($baseid) $filename"
+    else
+      echo "part of system $filename"
+    fi
+  elif [  ! -f "${SDIR}/$f" ]; then
+    delete='y'
+  fi
+  if [ -n "$delete" ]; then
+    echo rm -f "${TDIR}/$f"
+    rm -f "${TDIR}/$f"
+  fi 
+}
+
+SDIR=$(realpath $1)
+TDIR=$(realpath ${ROOTDIR})
+if [ -f "$2" ]; then
+  EXTRAFILES=$(realpath $2)
+fi
+if [ -f "$3" ]; then
+  DELFILES=$(realpath $3)
+fi
+
+declare -A keepmods
+
+if [ -n "$EXTRAFILES" ]; then
+  if [ -f "$EXTRAFILES"  ]; then
+    while read FILENAME
+    do
+      keepmods[$FILENAME]='y'
+      FILENAMEX=${FILENAME//-/_}
+      keepmods[$FILENAMEX]='y'
+      FILENAMEX=${FILENAME//_/-}
+      keepmods[$FILENAMEX]='y'
+    done <  "$EXTRAFILES"
+  else
+    echo "Can't find $EXTRAFILES"
+    exit 1
+  fi
+fi
+
+
+OLDIR=$PWD
+
+cd $TDIR
+
+find -type f -name "*.ko" | while read file; do check_km_path "$file"; done
+
+find /lib/modules -empty -type d -delete 
+
